@model IEnumerable<ASP.Net_MVC_Fundamentals.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (@Model.Count()== 0)
{
    <text>We dont have customers yet </text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in @Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name,"Details","Customers",new{ id = customer.Id},null)</td>
                </tr>
            }
        </tbody>
    </table>
}
